{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",                                  
    "paths": {
      "@/resources/*" : ["resources/*"],
      "@/utils/*" : ["utils/*"],
      "@/middleware/*" : ["middleware/*"],
    },   
    "resolveJsonModule": true,  
    "isolatedModules": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "incremental": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}